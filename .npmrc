; Project-level npm configuration (applies to CI and local)

; Faster, less noisy installs by default
fund=false
audit=false

; Network resilience for flaky registries
fetch-retries=5
fetch-retry-factor=2
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000

; Security and deterministic behavior
strict-ssl=true
package-lock=true

; Use the public npm registry by default
registry=https://registry.npmjs.org/

; Prefer network over cache to avoid stale packages in CI
prefer-online=true

