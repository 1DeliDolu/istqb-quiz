; Project-level npm configuration (applies to CI and local)

; Faster, less noisy installs by default
fund=false
audit=false

; Network resilience for flaky registries
fetch-retries=3
fetch-retry-factor=2
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

; Security and deterministic behavior
strict-ssl=true
package-lock=true

; Use the public npm registry by default
registry=https://registry.npmjs.org/

; Use local cache when possible for faster installs
prefer-offline=false

